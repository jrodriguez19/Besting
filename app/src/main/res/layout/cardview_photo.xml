<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/photo_card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_view_height"
    cardview:cardCornerRadius="@dimen/card_view_corner_radius"
    android:layout_margin="@dimen/activity_vertical_margin">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/photo_IV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_view_height"
            android:background="@drawable/penguin"
            android:scaleType="centerCrop"
            android:transitionName="transition_name_to_photo"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:padding="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="#20000000">

            <TextView
                android:id="@+id/username_card_view_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="George Rodriguez"
                android:textColor="@color/editTextColorWhite"
                android:textSize="@dimen/username_size_card_view" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/timeCard_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/editTextColorWhite"
                    android:text="4 days"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/editTextColorWhite"
                    android:text=" ago"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/like_margin_top_card_view">

                <CheckBox
                    android:id="@+id/like_card_view_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/like_check_box_selector" />
                <TextView
                    android:id="@+id/number_of_likes_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/editTextColorWhite"
                    android:text=" 10 Likes  "/>
                <CheckBox
                    android:id="@+id/dislike_card_view_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/dislike_check_box_selector" />
                <TextView
                    android:id="@+id/number_of_dislikes_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/editTextColorWhite"
                    android:text=" 2 Dislikes"/>

            </LinearLayout>



        </LinearLayout>


    </FrameLayout>






    </android.support.v7.widget.CardView>